@model  List<Music.Models.Albums>
@{
    Layout = null;
}
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/Site.css" rel="stylesheet" />
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Music TP</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">MUSIC_NOSQL TP</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link active" href="@Url.Action("Index","Catalog")">Catalogue <span class="sr-only">(current)</span></a>
                <a class="nav-item nav-link" href="@Url.Action("Albums","Catalog")">Albums</a>
                <a class="nav-item nav-link" href="@Url.Action("Artists","Catalog")">Artistes</a>
            </div>
        </div>
    </nav>
    <br /><br />
    <div class="container">
        <div class="row">
            @foreach (var album in Model)
            {
                <div class="col-sm-3">
                    <div class="card">
                        <img class="card-img-top img-fluid" src="@album.albumPicture" >
                        <div class="card-block">
                            <h4 class="card-title">@album.albumName</h4>
                            <p class="card-text">Groupe : @album.artist.artistName</p>
                            <p class="card-text">Type de l'artiste : @album.artist.artistType</p>
                            <p class="card-text">Pays d'origine : @album.artist.artistCountry</p>
                            <p class="card-text"><small class="text-muted">Prix : @album.albumPrice  €</small> <br /> <small class="text-muted">Année : @album.albumYear</small></p>
                        </div>
                    </div>
                    <br /><br />
                </div>
                
            }
            
            </div>
        </div>


</body>
</html>
@section Scripts{
