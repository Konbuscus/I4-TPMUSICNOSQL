@model  List<Music.Models.Artistes>
@{
    Layout = null;
}
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/Site.css" rel="stylesheet" />
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Music TP</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">MUSIC_NOSQL TP</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link" href="@Url.Action("Index","Catalog")">Catalogue</a>
                <a class="nav-item nav-link" href="@Url.Action("Albums","Catalog")">Albums</a>
                <a class="nav-item nav-link active" href="@Url.Action("Artists","Catalog")">Artistes<span class="sr-only">(current)</span></a>
            </div>
        </div>
    </nav>
    <br /><br />
    <div class="container">
        <div class="row">
            @foreach (var artist in Model)
            {
                <div class="col-sm-3">
                    <div class="card">
                        <div class="card-block">
                            <h4 class="card-title">@artist.artistName</h4>
                            <p class="card-text">Type de l'artiste : @artist.artistCountry</p>
                            <p class="card-text"><small class="text-muted">Genre musical : @artist.artistMusicType</small></p>
                        </div>
                    </div>
                    <br /><br />
                </div>

            }

        </div>
    </div>


</body>
</html>
@section Scripts{
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>
    <script type="text/javascript">
    $(document).ready(function () {

    });
    </script>


}
